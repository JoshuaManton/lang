proc __trap() #foreign;

proc assert(condition: bool) {
    if (condition == false) {
        __trap();
    }
}

proc factorial(n: int) : int {
    if (n == 1) {
        return 1;
    }
    return n * factorial(n-1);
}

var b: int;

proc main() {
    b = 5;
    b = factorial(b);
    assert(b == 120);

    var a: int = factorial(10);
    assert(a == 3628800);
}
